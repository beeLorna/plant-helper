<div class="column_container">
  <div>
    <h1>Plant Idents</h1>

    <p><%= link_to "Quiz me!", plant_quiz_question_path %></p>

    <aside>
      <%= form_with url: root_path, method: :get do |form| %>
        <details>
          <summary>Filter</summary>
          <p><%= form.check_box :only_shuttleworth_cultivar %> <%= form.label :only_shuttleworth_cultivar, "Only show Shuttleworth cultivars" %></p>
          <%= form.submit "Go", name: nil %>
        </details>
      <% end %>
    </aside>

    <table>
      <thead>
        <tr>
          <th>Botanical name</th>
          <th>Common name</th>
          <th>Week</th>
          <th>Shuttleworth cv.</th>
        </tr>
      </thead>

      <tbody>
        <% @plants.each do |plant| %>
          <tr>
            <td class="botanical_name"><%= link_to plant.botanical_name, plant_path(plant) %></td>
            <td class="common_name"><%= plant.common_name %></td>
            <td class="week"><%= plant.week %></td>
            <td class="shuttleworth_cultivar">
              <% if plant.shuttleworth_cultivar %>
                ✔
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="column_container">
    <div>
      <h3>Hardiness ratings</h3>
      <table>
        <thead>
          <tr>
            <th>Rating</th>
            <th>Temperature ranges ºC </th>
            <th>Category</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>H1a</td>
            <td>warmer than 15</td>
            <td>Heated glasshouse - tropical</td>
          </tr>
          <tr>
            <td>H1b</td>
            <td>10 to 15</td>
            <td>Heated glasshouse - subtropical</td>
          </tr>
          <tr>
            <td>H1c</td>
            <td>5 to 10</td>
            <td>Heated glasshouse - warm temperate</td>
          </tr>
          <tr>
            <td>H2</td>
            <td>1 to 5</td>
            <td>Tender - cool or frost-free glasshouse</td>
          </tr>
          <tr>
            <td>H3</td>
            <td>-5 to 1</td>
            <td>Half-hardy - unheated glasshouse / mild winter</td>
          </tr>
          <tr>
            <td>H4</td>
            <td>-10 to -5</td>
            <td>Hardy - average winter</td>
          </tr>
          <tr>
            <td>H5</td>
            <td>-15 to -10</td>
            <td>Hardy - cold winterr</td>
          </tr>
          <tr>
            <td>H6</td>
            <td>-20 to -15</td>
            <td>Hardy - very cold winter</td>
          </tr>
          <tr>
            <td>H7</td>
            <td>colder than -20 </td>
            <td>Very hardy</td>
          </tr>
        </tbody>
      <table>
    </div>
  </div>
</div>
